{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "build",
    "lib": [
      "ES2021",
      "dom"
    ],
    "strict": true,
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "noImplicitAny": false,
    "strictNullChecks": false,
    "paths": {
      "@iso/assets/*": ["src/assets/*"],
      "@iso/components/*": ["src/components/*"],
      "@iso/config/*": ["src/config/*"],
      "@iso/containers/*": ["src/containers/*"],
      "@iso/redux/*": ["src/redux/*"],
      "@iso/lib/*": ["src/library/*"],
      "@iso/ui/*": ["src/UI/*"],
      "@custom/*": ["src/customApp/*"]
    }
  },
  "include": [
    "src/**/*",
    "src/declaration.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}